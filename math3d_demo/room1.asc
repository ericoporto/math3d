Transform3D cam;

int things_count;

float ClampFloat(float f, float max, float min){
  if(f>max) return max;
  if(f<min) return min;
  return f;
}

struct WorldThings{
  Character* c;
  float x;
  float y;
  float z;
};

WorldThings thing[21];

